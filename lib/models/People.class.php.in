class People extends ADOdb_Active_Record {

	public function toString() {

		/** Initialize the output */
		$output = '';

		/** Get the attributes */
		$attributes = $this->getAttributeNames();

		/** Generate the string */
		$sep = "";
		foreach($attributes as $attribute) {
			$output .= $sep . $attribute . ' = ' . $this->$attribute;
			$sep = ", ";
		}

		return $output;
	}
}

class MainPeople extends People {

	# The table name
	public $_table = null;

	# The primary key
	public static $primary_key = 'ad_id';

	# Specify the connection
	public $_dbat = 'main';

	public function __construct() {

		/** Get the Registry instance */
		$registry = Registry::getInstance();

		/** get the config */
		$config = $registry->get('config');

		$this->_table = $config['DATABASE']['MAIN']['SETTINGS']['table'];

		parent::__construct();
	}
}

