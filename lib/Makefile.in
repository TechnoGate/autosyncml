VERSION=@VERSION@

prefix=/usr/local
etcdir=$(prefix)/etc
bindir=$(prefix)/bin
libdir=$(prefix)/lib
autosyncmllibdir=$(libdir)/autosyncml
sharedir=$(prefix)/share
INSTALL=install
MAKE=make
GIT=git

TARGETS= 	main.php include.inc common.inc Mailman.class.inc

targets: make-models-targets
	@for target in $(TARGETS) ; \
	do \
		sed -e "s:@VERSION@:$(VERSION):g" \
			-e "s:@AUTOSYNCMLLIBDIR@:$(autosyncmllibdir):g" \
			-e "s:@SHAREDIR@:$(sharedir):g" \
			-e "s:@BINDIR@:$(bindir):g" \
			-e "s:@ETCDIR@:$(etcdir):g" \
			$${target}.in > $${target}; \
	done

install: make-models-install
	@for target in $(TARGETS) ; \
	do \
		$(INSTALL) -m 644 $${target} $(DESTDIR)$(autosyncmllibdir)/$${target}; \
	done
	@cp -a php-activerecord $(DESTDIR)$(autosyncmllibdir)/php-activerecord
	@rm -rf $(DESTDIR)$(autosyncmllibdir)/php-activerecord/.git

clean: make-models-clean
	@for target in $(TARGETS) ; \
	do \
		rm -f $${target}; \
	done

make-models-targets:
	@$(MAKE) -C models targets

make-models-install:
	@$(MAKE) -C models install

make-models-clean:
	@$(MAKE) -C models clean
