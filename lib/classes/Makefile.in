VERSION=@VERSION@

prefix=/usr/local
etcdir=$(prefix)/etc
bindir=$(prefix)/bin
libdir=$(prefix)/lib
autosyncmllibdir=$(libdir)/autosyncml
sharedir=$(prefix)/share
INSTALL=install
MAKE=make
GIT=git

TARGETS= 	Logger.class.php Mailman.class.php Person.class.php Departements.class.php

targets:
	@for target in $(TARGETS) ; \
	do \
		sed -e "s:@VERSION@:$(VERSION):g" \
			-e "s:@AUTOSYNCMLLIBDIR@:$(autosyncmllibdir):g" \
			-e "s:@SHAREDIR@:$(sharedir):g" \
			-e "s:@BINDIR@:$(bindir):g" \
			-e "s:@ETCDIR@:$(etcdir):g" \
			$${target}.in > $${target}; \
	done

install:
	$(INSTALL) -d -m 755 $(DESTDIR)$(autosyncmllibdir)/classes
	@for target in $(TARGETS) ; \
	do \
		$(INSTALL) -m 644 $${target} $(DESTDIR)$(autosyncmllibdir)/classes/$${target}; \
	done

clean:
	@for target in $(TARGETS) ; \
	do \
		rm -f $${target}; \
	done
